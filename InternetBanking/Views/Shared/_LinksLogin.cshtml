    @if (User != null)
    {
        <span class="me-2 p-1">Bienvenido, @Model.UserName</span>
        <a class="btn btn-danger btn-sm" asp-controller="User" asp-action="LogOut">
            Cerrar Sesion
        </a>
    }
</div>